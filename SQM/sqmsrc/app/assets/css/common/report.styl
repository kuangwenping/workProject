//报告单
.correct-report-wrap{
  .fold-arrows{
    border-left:4px solid transparent;
    border-right:4px solid transparent;
    border-bottom:5px solid mc;
  }
  .fold-arrows-down{
    border-bottom:none;
    border-top:5px solid mc;
  }

  .czy-key{
    color:ft2;
    font-weight:bold;
    font-size:12px;
    width:75px;
    height: 32px;
    line-height:32px;
    margin-right:8px;
  }

  .czy-val{
    color:ft1;
    font-size:12px;
  }
  .gather-thunk{
    width:100%;
  }
  .par-wrap{
    margin-left:83px;
  }
  .czy-textarea{
    resize :vertical;
    height:70px;
  }

  .czy-content-item{
    font-size:0;
    .czy-form-item{
      margin-bottom:0;
      height: 32px;
      line-height:32px;
      padding-left:0;
      padding-right:0;
    }
    .file-wrap{
      .file-item{
        &:first-child{
          margin-left:0;
        }

        display:inline-block;
        cursor pointer;
        text-align center;
        margin-left:20px;
        a{
          color:mc;
          text-decoration underline;
          display:block;
        }
      }
    }
  }

  .report-title-thunk{
    border-left:4px solid mc;
    padding:0 10px;
    margin-top:10px;
    margin-bottom:10px;
    background:mbg;
    .title-list{
      height:18px;
      line-height:18px;
      font-size:12px;
      color:ft1;
      &:first-child{
        margin-left:0;
      }
      display:inline-block;
      margin-left:30px;
    }
  }
}

//报告新建
.report-wrap-create{
  .czy-key{
    text-align right;
    width:100px;
  }
  .hint-grey{
    display:inline-block;
    margin-top:8px;
    color:ft3;
    font-size:12px;
  }

  .par-wrap{
    margin-left:107px;
  }

  .editor-list{
    padding:18px;
    border:1px solid mc;
    .editor-title{
      font-size:14px;
      padding-left:10px;
      border-left:3px solid mc;
    }
  }

  .czy-btn-group{
    text-align center;
  }
}