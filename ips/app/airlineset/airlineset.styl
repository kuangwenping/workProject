@import "../assets/css/common/var.styl";
@import "../assets/css/common/mixin.styl";

.airlineset-wrap{
  //tab切换
  .content-wrap{
    display:none;
  }
  .active.content-wrap{
    display:block;
  }
  /*右侧内容*/
  .content-wrap {
    max-width: 1110px;
    margin: 0 auto;
    padding: 0 20px;

    .ui-key-start{
      width:100px;
      text-align :right;
      display:inline-block;
      vertical-align middle;
    }


    .title-chunk{
      margin-top:20px;
      margin-bottom:20px;
      p{
        setMar0();
        margin:0 66px;
        display:inline-block;
        vertical-align middle;
        font-size :14px;
        font-weight:bold;
      }
      .ui-val{
        color:$ac;
        font-size:22px;
        font-weight:100;
      }
    }


    .form-gloup{
      .ui-form{
        margin-right:10px;
        setMar0();
        input{
          width:56px;
        }
      }
      .weight-select{
        setMar0();
        margin-right:5px;
        input{
          width:75px;
        }
      }
        .form-thunk1{
          .ui-form{
            &:last-child{
              margin-left:35px;
            }
          }
        }
    }

    .select-thunk{
      border-bottom:none;
      .check-thunk1,.check-thunk2{
        margin-left:110px;
        .ui-val{
          min-width:100px;
        }
      }
    }

    .textarea-thunk{
      margin-bottom:50px;
      >div{
        margin-left:110px;
      }
      .ui-textarea{
        height:120px;
        padding :15px 20px;
        width:100%;
        overflow-y:auto;
        margin-bottom:20px;
      }
    }
      //底部块
    .foot-thunk{
      .btn-group{
        text-align center;
        .ui-btn{
          setMar();
          margin:0 5px;
        }
      }
    }
  }
}
