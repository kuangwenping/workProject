//线上标题横条背景
.lineup.ui-strip1{
  &:after{
     addWC('');
    border-top:15px solid #aed06f;
    border-left:0 solid #aed06f;
    border-right: 15px solid transparent;
    position:absolute;
    right:-15px;
    top:0;
  }
  &:before{
     addWC('');
    border-bottom:15px solid #aed06f;
    border-left:0 solid #aed06f;
    border-right: 15px solid transparent;
    position:absolute;
    right:-15px;
    bottom:0;
  }
  position:relative;
  width:105px;
  height:30px;
  background:#aed06f;
  .ui-strip2{
    width:65px;
    height:30px;
    background:#7dbc46;
    text-align: center;
    line-height:30px;
    position:relative;
    &:after{
       addWC('');
      border-top:15px solid #7dbc46;
      border-left:0 solid #7dbc46;
      border-right: 15px solid transparent;
      position:absolute;
      right:-15px;
      top:0;
    }
    &:before{
       addWC('');
      border-bottom:15px solid #7dbc46;
      border-left:0 solid #7dbc46;
      border-right: 15px solid transparent;
      position:absolute;
      right:-15px;
      bottom:0;
    }
  }
  .ui-strip-text{
    color:$fc3;
    font-size: 16px;
  }
}

  //预生效
.effect.ui-strip1{
  &:after{
    addWC('');
    border-top:15px solid #d64344;
    border-left:0 solid #d64344;
    border-right: 15px solid transparent;
    position:absolute;
    right:-15px;
    top:0;
  }
  &:before{
    addWC('');
    border-bottom:15px solid #d64344;
    border-left:0 solid #d64344;
    border-right: 15px solid transparent;
    position:absolute;
    right:-15px;
    bottom:0;
  }
  position:relative;
  width:105px;
  height:30px;
  background:#d64344;
  .ui-strip2{
    width:65px;
    height:30px;
    background:$ac1;
    text-align: center;
    line-height:30px;
    position:relative;
    &:after{
      addWC('');
      border-top:15px solid $ac1;
      border-left:0 solid $ac1;
      border-right: 15px solid transparent;
      position:absolute;
      right:-15px;
      top:0;
    }
    &:before{
      addWC('');
      border-bottom:15px solid $ac1;
      border-left:0 solid $ac1;
      border-right: 15px solid transparent;
      position:absolute;
      right:-15px;
      bottom:0;
    }
  }
  .ui-strip-text{
    color:$fc3;
    font-size: 16px;
  }
}

