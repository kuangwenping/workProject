.ui-icon-clones{
  border:1px solid $mc;
  border-radius 50%;
  width:20px;
  height:20px;
  text-align center;
  &:hover{
    border-color:$ac1;
    &:before{
      color:$ac1;
    }
  }
  &:before{
    addWC('+');
    font-size:30px;
    transform: translate(0px,-6px) rotate(45deg);
    vertical-align: text-top;
    color:$mc;
  }
}

