//时间处理
.calendar-space{
  .calendar{
    width:110px;
    padding-left:30px;
  }
  .arrive-text{
    display:inline-block;
    margin-left:5px;
    margin-right:5px;
    vertical-align :middle;
  }
}
.time-input{
  display inline-block;
  position:relative;
  .ui-icon-calendar{
    position absolute;
    top:8px;
    left:8px;
  }
}

