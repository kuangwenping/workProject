@import "../../assets/css/common/var.styl";
@import "../../assets/css/common/mixin.styl";

.checkairroutedot-wrap{
  padding-top:10px;
  .air-check-left,.air-check-right{
    padding:30px 40px 20px 15px;
  }

  .ui-key-start{
    width:94px;
    text-align:right;
    display:inline-block;
  }
  .title-text{
    padding-left:20px;
    >span{
      font-size:12px;
      font-weight:100;
    }
  }
  .form-size{
  //form大下
    .form-first{
      width:275px;
    }
    .form-last{
      width:330px;
    }
  //input框大小
    .input-xl{
      width:254px;
    }
    .input-l{
      width:158px;
    }
    .input-m{
      width:125px;
    }
    .input-sm{
      width:70px;
    }
    .input-s{
      width:40px;
    }
    .input-selece-x{
      .bui-select-input{
        width:30px;
      }
    }
    .input-selece-s{
      .bui-select-input{
        width:70px;
      }
    }

    .input-selece-l{
      .bui-select-input{
        width:134px;
      }
    }

    .ui-form{
      padding-right:16px;
      text-align right;
      margin-bottom:10px;
      label{
        margin-right:1px;
      }
    }
    .ac{
      color:$ac;
    }
    .ui-coordinate{
      text-align :right;
      margin-bottom:10px;
      .ui-form{
        padding-right:0;
        display:inline-block;
        vertical-align middle;
        margin-bottom:0;
      }
      >span{
        vertical-align middle;
        margin-left:10px;
      }
    }

    .ui-pad0{
      padding-right:0;
    }
  }
  .left-content{
    .ui-form{
      margin-left:2px;
      text-align left;
    }
  }
  .client-thunk{
    .form-size{
      .form-first{
        width:310px;
      }
    }
  }
}