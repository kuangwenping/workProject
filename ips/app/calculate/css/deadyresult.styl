@import "../../assets/css/common/var.styl";
@import "../../assets/css/common/mixin.styl";
.deadyresult-wrap{
  //z内容
  .content-wrap{
     max-width:1120px;
     margin:0 auto;
     padding:0 20px;
    .ui-keyval{
      >p{
        padding:0 20px;
        setPad0();
      }
    }

    .keyval-chunk{
      >p{
        display:inline-block;
        margin-right: 100px;
      }
    }

    .table-thunk.brief-table{
      .bui-grid-body{
        max-height:60px;
      }
    }

    .table-thunk.details-table{
        .bui-grid-body{
          max-height:348px;
        }
    }

    .ui-textarea{
      resize: none;
      width:100%;
      height:90px;
      border:1px solid $bm;
    }
    .footer-thunk{
        text-align: right;
      >p{
        &:last-child{
          margin-left:10px;
        }
        display:inline-block;
      }
    }
  }
}
