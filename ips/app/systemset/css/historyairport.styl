@import "../../assets/css/common/var.styl";
@import "../../assets/css/common/mixin.styl";

.historyairport-wrap{
  //历史
  .czy-history-aside.aside-wrap{
    .taggle-btn{
      .j-close{
        display:none;
      }
      .j-open{
        display:block;
      }
    }
    .query-form-chunk{
      display:none;
      .ui-form{
        input{
          width:150px;
        }
        .bui-select-input{
          width:126px;
          border-color:$bg7;
        }
      }
    }
    .result-thunk{
      top:35px;
    }
    .query-result-wrap{
      li.active{
        .air-name{
          color:$ac1;
        }
      }
      li{
        .air-name{
          setPad0();
          color:$fc3;
          width:40%;
          padding:0 10px;
        }
      }
    }
    .page-thunk{
      position:absolute;
      bottom:30px;
      left:8px;
      right:8px;
    }
  }

  //对比
  .czy-compare-aside.aside-wrap{
    .result-thunk{
      top:35px;
      .radio-thunk{
        text-align center;
        padding:0 8px;
        >div{
          display:inline-block;
          .ui-text-form{
            color:$fc3;
          }
        }
      }

      .result-list{
        li.active{
          padding-right:18px;
          .num{
            background:$ac1;
          }
          .at{
            color:$ac1;
          }
        }
        li{
          padding-left:10px;
          padding-right:10px;
          text-align center;
          span{
            setMar0();
            display:inline-block;
            width:70px;
            text-align center;
          }
          span.num{
            background:$ac;
            height:16px;
            width:25px;
            text-align center;
            line-height:16px;
            color:$fc3;
            margin-top:12px;
            border-radius :8px;
          }
        }
      }

      .result-list.col-5-result{
        li{
          span{
            setMar0();
            display:inline-block;
            width:52px;
          }
          span.num{
            width:25px;
          }
        }
      }

      .result-list.col-6-result{
        li.active{
          padding-right:16px;
        }
        li{
          padding-left: 10px;
          padding-right: 10px;
          span{
            setMar0();
            display:inline-block;
            margin-left:7px;
            margin-right:7px;
          }
        }
      }
    }
  }


  .content-wrap {
    max-width: 1100px;
    margin: 0 auto;
    .table-thunk{
      .bui-grid-body{
        max-height:88px;
      }
    }
    .ui-key-first{
        width:90px;
        padding-right:8px;
        display:inline-block;
        vertical-align middle;
        text-align right;
      }
    .head-thunk{
      margin-bottom:10px;
      .title-text{
        >p{
          font-weight:bold;
          display:inline-block;
          vertical-align :middle;
        }
        .ui-form{
          display:inline-block;
          vertical-align :middle;
          margin-left:5px;
          input{
            width:50px;
            background:$bg1;
          }
        }
      }
    }

    .form-group{
      //外层form宽度
      .ui-form-first{
        width:189px;
        padding-right:17px;
      }
      .ui-form-w2{
        width:282px;
        padding-right:17px;
      }
      .ui-form-w3{
        width:190px;
        padding-right:17px;
      }
      .ui-form-w4{
        width:190px;
        padding-right:17px;
      }
      .ui-form-last{
        padding-right:17px;
      }

      //设置padding-right0
      .pad-r0{
        padding-right:0;
      }

      //input宽度
      .ui-in-xs{
        width:30px;
      }

      .ui-in-s{
        .bui-select-input{
          width:55px;
        }
      }

      .ui-in-m{
        width:80px;
      }

      .ui-in-l{
        width:360px;
      }

      .ui-form{
        margin-bottom:10px;
        text-align :right;
      }
      .ui-coordinate{
        text-align :right;
        margin-bottom:10px;
        .ui-form{
          display:inline-block;
          vertical-align middle;
          margin-bottom:0;
          >input{
            width:40px;
          }
          .bui-select-input{
            width:30px;
          }
        }
      }
    }

    .client-data{
      .form-group1.form-group{
        .ui-form-first{
          width:468px;
        }
      }
      .form-group2.form-group{
        .ui-form-w2{
          width:240px;
        }
        .ui-form-w3{
          width:230px;
        }
      }

    }

    .select-thunk{
      border-bottom:none;
      .ui-form{
        margin-left:90px;
      }
    }
    .track-info{
      .table-thunk{
        margin-left:90px;
      }
    }
    .remark-form{
      margin-bottom:40px;
      >div{
        margin-left:90px;
      }
      .ui-textarea{
        height:87px;
        width:100%;
      }
    }
      //按钮
    .btn-group{
      text-align center;
      >div{
        display:inline-block;
        .ui-btn{
          setMar0();
          margin:0 14px;
        }
      }
    }
  }
}