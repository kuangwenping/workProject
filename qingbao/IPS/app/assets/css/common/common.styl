  position:absolute;
  bottom:45px;
  padding:0 8px;
  .bui-bar-item{
    setMar0();
    margin-right:1px;
    a{
      &:hover{
        background:$bg5-1;
      }
      border:none;
      background:$bg9;
      color:$fc3;
    }
  }
  #prev,#next{

    a{
      &:before{
        background:$bg9;
      }
    }
    a{
      &:after{
        border-color:$fc3;
      }
    }
  }
  #prev.disabled,#next.disabled{
