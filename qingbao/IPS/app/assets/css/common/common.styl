    line-height:36px;
    padding-left: 0;
    font-weight: 300;
  }
  .bui-stdmod-body{
    font-size: 12px;
    position:relative;
    border: none;
    margin: 0;
    >.ui-hint-text{
      position:absolute;
      top:50%;
      transform: translateY(-50%);
