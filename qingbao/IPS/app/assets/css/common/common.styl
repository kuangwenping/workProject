      &:after{
        border-color:$mc;
      }
    }
  }
}
.pages-thunk{
  .bui-bar-item.active{
    a{
      background:$ac;
      color:$fc3;
      border:none;
    }
  }
  .bui-bar-item{
    width:32px;
    height:32px;
    text-align: center;
    line-height:30px;
    display:inline-block;
    a{
      display:inline-block;
      width:100%;
      height:100%;
      color:$mc;
      padding:0;
      border-color: $bm;
      background: $bgb;
    }
  }

  .disabled#prev{
    a{
      &:after{
        border-bottom: 1px solid $bg1;
        border-left: 1px solid $bg1;
        transform: rotate(45deg);
      }
    }
  }
  .disabled#next{
    a{
      &:after{
        border-bottom: 1px solid $bg1;
        border-left: 1px solid $bg1;
        transform: rotate(-135deg);
      }
    }
  }

  #prev,#next{
    a{
      position: relative;
      &:hover{
        opacity: .9;
      }
      &:before{
         addWC('');
        position: absolute;
        width: 100%;
        height:100%;
        background:$bgb;
        top:0;
        left:0;
      }
      &:after{
         addWC('');
        position: absolute;
        top:10px;
        left:12px;
        width:10px;
        height:10px;
      }
    }
  }
  #prev{
    a{
      &:after{
        border-bottom: 1px solid $ac;
        border-left: 1px solid $ac;
        transform: rotate(45deg);
      }
    }
  }
  #next{
    a{
      &:after{
        border-bottom: 1px solid $ac;
        border-left: 1px solid $ac;
        transform: rotate(-135deg);
      }
    }
  }
}


