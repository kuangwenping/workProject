@import "../../assets/css/common/var.styl";
@import "../../assets/css/common/mixin.styl";

.historyairroute-wrap{
  .aside-wrap{
    .taggle-btn{
      .j-close{
        display:none;
      }
      .j-open{
        display:block;
      }
    }
    .query-form-chunk{
      display:none;
      margin-top:30px;
      .ui-form{
        input{
          width:150px;
        }
      }
    }
    .result-thunk{
      top:35px;
    }
    .query-result-wrap{
      li.active{
        .air-name{
          color:$ac1;
        }
      }
      li{
        padding: 0 25px;
        .air-name{
          setMar0();
          margin:0 8px;
          color:$fc3;
        }
      }
    }
    .page-thunk{
      position:absolute;
      bottom:30px;
      left:8px;
      right:8px;
    }
  }
  .content-wrap {
    max-width: 1100px;
    margin: 0 auto;
    .ui-key-first{
        width:90px;
        padding-right:8px;
        display:inline-block;
        vertical-align middle;
        text-align right;
      }
    .head-thunk{
      margin-bottom:10px;
      .title-text{
        >p{
          font-weight:bold;
          display:inline-block;
          vertical-align :middle;
        }
        .ui-form{
          display:inline-block;
          vertical-align :middle;
          margin-left:5px;
          input{
            width:50px;
            background:$bg1;
          }
        }
      }
    }

    .form-group{
      //外层form宽度
      .ui-form-first{
        width:188px;
        padding-right:17px;
      }
      .ui-form-w2{
        width:280px;
        padding-right:17px;
      }
      .ui-form-w3{
        width:190px;
        padding-right:17px;
      }
      .ui-form-w4{
        width:190px;
        padding-right:17px;
      }
      .ui-form-last{
        width:242px;
        padding-right:17px;
      }

      //设置padding-right0
      .pad-r0{
        padding-right:0;
      }

      //input宽度
      .ui-in-xs{
        width:30px;
      }

      .ui-in-s{
        .bui-select-input{
          width:55px;
        }
      }

      .ui-in-m{
        width:80px;
      }

      .ui-in-l{
        width:360px;
      }

      .ui-form{
        margin-bottom:10px;
        text-align :right;
      }
      .ui-coordinate{
        text-align :right;
        margin-bottom:10px;
        .ui-form{
          display:inline-block;
          vertical-align middle;
          margin-bottom:0;
          >input{
            width:30px;
          }
          .bui-select-input{
            width:30px;
          }
        }
      }
    }

    .client-data{
      .form-group1.form-group{
        .ui-form-first{
          width:468px;
        }
      }
      .form-group2.form-group{
        .ui-form-w2{
          width:240px;
        }
        .ui-form-w3{
          width:230px;
        }
      }

    }

    .select-thunk{
      border-bottom:none;
      .ui-form{
        margin-left:90px;
      }
    }
    .track-info{
      .table-thunk{
        margin-left:90px;
      }
    }
    .remark-form{
      margin-bottom:40px;
      >div{
        margin-left:90px;
      }
      .ui-textarea{
        height:87px;
        width:100%;
      }
    }
      //按钮
    .btn-group{
      text-align center;
      >div{
        display:inline-block;
        .ui-btn{
          setMar0();
          margin:0 14px;
        }
      }
    }
  }
}