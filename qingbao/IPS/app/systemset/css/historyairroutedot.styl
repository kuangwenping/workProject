@import "../../assets/css/common/var.styl";
@import "../../assets/css/common/mixin.styl";

.historyairroutedot-wrap{
  .aside-wrap{
    .query-form-chunk{
      display:block;
      .ui-form{
        input{
          width:150px;
          background:$bg3;
        }
        .bui-select-input{
          width:126px;
        }
        .x-icon-normal{
          border:none;
          height:26px;
          border-left:1px solid $bc2;
          background :$bg3;
          .icon-caret{
            border-top-color:$bg5;
          }
        }
      }
    }
      .result-thunk{
        top:300px;
      }
    .query-result-wrap{

      li.active{
        .air-name{
          color:$ac1;
        }
      }
      li{
        padding: 0 25px;
        .air-name{
          color:$ac;
        }
        span{
          .ui-icon{
            margin-left:12px;
          }
        }
      }
    }
  }
  .content-wrap{
    max-width:1100px;
    margin: 0 auto;
    .head-thunk{
      margin-bottom:10px;
      .title-text{
        >p{
          font-weight:bold;
          display:inline-block;
          vertical-align :middle;
        }
        .ui-form{
          display:inline-block;
          vertical-align :middle;
          margin-left:5px;
          input{
            width:50px;
            background:$bg1;
          }
        }
      }
    }
    .form-group-thunk{
      margin-bottom:15px;
      .form-group3{
        >.ui-form{
          &:first-child{
            input{
              width:115px;
            }
          }
        }
      }
      .form-group4{
        >.ui-form{
          &:first-child{
            input{
              width:105px;
            }
          }
          &:last-child{
            padding-right:18px;
            input{
              width:30px;
            }
          }
        }
      }
      .ui-form{
        margin-bottom:10px;
      }
      .ui-form-unit{
        min-width:((250/1440)*1280)px;
        max-width:250px;
        width:(250/1100)*100%;
        padding-right:18px;
        text-align :right;
        setPad0();
        input{
          width:140px;
        }
      }
      .ui-coordinate{
        width:(340/1100)*100%;
        min-width:((340/1440)*1280)px;
        max-width:340px;
        padding-right:15px;
        text-align :right;
        margin-bottom:10px;
        .ui-form{
          display:inline-block;
          vertical-align middle;
          margin-bottom:0;
          input{
            width:30px;
          }
        }
        >span{
          display:inline-block;
          vertical-align middle;
        }
      }
    }
    .client-data-thunk{
      margin-bottom:45px;
      .ui-form{
        width:(230/1100)*100%;
        max-width:230px;
        input{
          width:30px;
        }
      }
    }
    .btn-group{
      text-align :middle;
      .ui-btn-full{
        setMar0();
        margin:0 5px;
      }
    }
  }
}